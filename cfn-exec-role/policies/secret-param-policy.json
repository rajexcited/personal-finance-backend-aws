{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "VisualEditor0",
      "Effect": "Allow",
      "Action": ["secretsmanager:GetRandomPassword", "secretsmanager:ListSecrets"],
      "Resource": "*"
    },
    {
      "Sid": "VisualEditor1",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:UntagResource",
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret",
        "secretsmanager:PutResourcePolicy",
        "secretsmanager:DeleteResourcePolicy",
        "secretsmanager:PutSecretValue",
        "secretsmanager:CreateSecret",
        "secretsmanager:DeleteSecret",
        "secretsmanager:ValidateResourcePolicy",
        "secretsmanager:ListSecretVersionIds",
        "secretsmanager:TagResource",
        "secretsmanager:UpdateSecret",
        "secretsmanager:RotateSecret",
        "secretsmanager:CancelRotateSecret"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "secretsmanager:ResourceTag/environment": "${aws:PrincipalTag/environment}",
          "secretsmanager:ResourceTag/appId": "${aws:PrincipalTag/appId}"
        }
      }
    },
    {
      "Sid": "VisualEditor2",
      "Effect": "Allow",
      "Action": [
        "ssm:PutParameter",
        "ssm:LabelParameterVersion",
        "ssm:DeleteParameter",
        "ssm:UnlabelParameterVersion",
        "ssm:GetParameterHistory",
        "ssm:DescribeDocumentParameters",
        "ssm:GetParametersByPath",
        "ssm:GetParameters",
        "ssm:GetParameter",
        "ssm:DeleteParameters"
      ],
      "Resource": [
        "arn:aws:ssm:*:${aws:PrincipalAccount}:parameter/*${aws:PrincipalTag/appId}-${aws:PrincipalTag/environment}*",
        "arn:aws:ssm:*:${aws:PrincipalAccount}:document/*${aws:PrincipalTag/appId}-${aws:PrincipalTag/environment}*"
      ]
    },
    {
      "Sid": "VisualEditor3",
      "Effect": "Allow",
      "Action": "ssm:DescribeParameters",
      "Resource": "*"
    },
    {
      "Action": ["ssm:GetParameter", "ssm:GetParameters"],
      "Resource": [
        "arn:aws:ssm:us-east-2:${aws:PrincipalAccount}:parameter/cdk-bootstrap/${aws:PrincipalTag/appId}${aws:PrincipalTag/environment}/version"
      ],
      "Effect": "Allow",
      "Sid": "ReadVersion"
    }
  ]
}
