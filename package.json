{
  "name": "personal-finance-aws",
  "version": "0.1.0",
  "bin": {
    "app": "src/main/app.js"
  },
  "scripts": {
    "preclean": "tsc --build --clean",
    "clean": "for /d /r %i in (cdk.out\\asset*) do rmdir /s /q %i",
    "postclean": "for /d /r %i in (dist\\lambda_layer\\nodejs*) do rmdir /s /q %i ",
    "prebuild": "npm run clean",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "presynthlocal": "npm run build",
    "synthlocal": "npm run createlayer && if not exist dist\\ui mkdir dist\\ui",
    "postsynthlocal": "cdk synth",
    "predeploylocal": "npm run synthlocal",
    "deploylocal": "cdk diff",
    "postdeploylocal": "cdk deploy MyFinanceInfraStack",
    "precleanupnodejs": "for /d /r %i in (dist\\lambda_layer\\nodejs*) do rmdir /s /q %i ",
    "cleanupnodejs": "mkdir dist\\lambda_layer\\nodejs",
    "precreatelayer": "npm run cleanupnodejs",
    "createlayer": "jq \"del(.devDependencies, .scripts, .bin)\" package.json > dist/lambda_layer/nodejs/package.json",
    "postcreatelayer": "cd dist/lambda_layer/nodejs && npm install"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.507.0",
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/client-secrets-manager": "^3.535.0",
    "@aws-sdk/lib-dynamodb": "^3.509.0",
    "@aws-sdk/s3-request-presigner": "^3.565.0",
    "@types/aws-lambda": "^8.10.133",
    "@types/bcryptjs": "^2.4.6",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/ms": "^0.7.34",
    "@types/node": "20.11.14",
    "aws-cdk-lib": "^2.164.1",
    "commander": "^12.1.0",
    "constructs": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "source-map-support": "~0.5.21",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "bcryptjs": "~2.4.3",
    "cache-manager": "~5.5.1",
    "date-and-time": "~3.0.2",
    "jsonwebtoken": "~9.0.2",
    "ms": "^2.1.3",
    "stopwatch-node": "~1.1.0",
    "uuid": "^11.0.2"
  }
}
